<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">
@*<script src="~/jquery.min.js"></script>*@
<link href="~/emojionearea.min.css" rel="stylesheet">
<input type="hidden" id="groupID" value="@Model.group.id" />
<link rel="stylesheet" href="~/css/messstyle.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css"
      crossorigin="anonymous">
<div id="bodyoverlay">
    <div id="bigimage">
        <img />
        <div id="bigimagecross">
            <i class="fas fa-times"></i>
        </div>
    </div>
    <div id="overlaywrapper">
        <div id="MessageboxMainContainer" style="background:white; z-index:100;" class="minimized">
            <div id="UserHeaderImage">
                <image src="@Model.group.groupimageloc"></image>
            </div>
            <div class="actualmessagebody">
                <div id="MessageboxHeader">
                    <div class="BoxOptions">
                        <div class="StayonTopOption">
                            <i class="fas fa-arrow-up"></i>
                        </div>
                    </div>
                    <div class="MessageOptions">
                        <div class="Messagesettings">
                            <i class="fas fa-cog"></i>
                        </div>
                    </div>
                    <div class="UserDetails">
                        <div class="Username">@Model.group.name</div>
                        <div class="UserActiveStatus"></div>
                    </div>
                    <div class="settingView">
                        <div class="singlerow">
                            <div id="profilepic">
                                <input id="newimginput" type="file" accept="image/x-png,image/gif,image/jpeg" />
                                <div class="pencilicon">
                                    <i class="fas fa-pencil-alt"></i>
                                </div>
                                <img />
                            </div>
                            <div class="namecont">
                                <div class="nameoptionscont">
                                    <div>Name</div>
                                    <i class="fas fa-ellipsis-h" id="showoptionbtn"></i>
                                    <i class="fas fa-check" id="savename"></i>
                                    <i class="fas fa-times" id="cancelname"></i>
                                </div>
                                <div id="thisusername">NAbin</div>
                                <input id="thisusernameinput"></input>

                            </div>
                        </div>
                        <div class="autorephead">
                            AutoReplies
                            <i class="fas fa-plus-circle"></i>
                        </div>
                        <div id="allautoreps">
                            <div class="singleautorep">
                                <div class="questioncont">
                                    <div class="question">Hello, what do you do do? and how are you doing</div>
                                    <textarea class="questioninput"></textarea>
                                    <i class="fas fa-ellipsis-h showquestoptionbtn"></i>
                                    <i class="fas fa-check savequest"></i>
                                    <i class="fas fa-times cancelquest"></i>
                                </div>
                                <div class="answercont">
                                    <i class="fas fa-arrow-circle-right"></i>
                                    <div class="answer">I am fine thanks for asking. Long time no see. Why?</div>
                                    <textarea class="answerinput"></textarea>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="msgboxBody">
                    <div class="scrollbarcontainer">
                        <div class="scrollbar"></div>
                    </div>
                    <div class="addFileOVerlay">
                        Drop file(s) here!
                    </div>
                    <div class="scrollbaroverlay">
                        <div class="singleMessageScroller">
                            <div class="singleMessage1Container">
                                <div class="singleMessageContainer">


                                    @*<div class="singleMessage anotheruser">
                                            <div class="userpic"></div>
                                            <div class="actualmessage">
                                                <div class="nametag">Nabin</div>
                                                <div class="typing">
                                                    <div class="first"></div>
                                                    <div class="second"></div>
                                                    <div class="third"></div>
                                                </div>
                                            </div>
                                        </div>*@

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="msgboxInputcontainer">
                    <div class="textareact">
                        <textarea id="textInput" placeholder="Type message here...."></textarea>
                    </div>
                    <div class="inputsContainer">
                        <div class="fileInput">
                            <input type="file" class="imagedata" file accept="image/*">
                            <i class="fas fa-paperclip" style="padding:6px"></i>

                        </div>
                        <div id="soundInput">
                            <i class="fas fa-microphone" style="padding:6px"></i>
                        </div>
                    </div>
                    <div class="reorderbox">
                        <div id="recordbutton"><i class="fas fa-microphone" style="padding:6px"></i></div>
                        <div class="recordstopbtncont">
                            <div class="soundlevel">
                                <div id="slevel10"></div>
                                <div id="slevel9"></div>
                                <div id="slevel8"></div>
                                <div id="slevel7"></div>
                                <div id="slevel6"></div>
                                <div id="slevel5"></div>
                                <div id="slevel4"></div>
                                <div id="slevel3"></div>
                                <div id="slevel2"></div>
                                <div id="slevel1"></div>
                            </div>
                            <div id="recordstopbutton" class="isrecording">
                                <i class="fa fa-stop-circle" aria-hidden="true" style="padding:6px"></i>
                            </div>
                        </div>
                        <div class="recordbuttonexit">

                            <i class="fas fa-times" id="cancelname"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.rawgit.com/mervick/emojionearea/master/dist/emojionearea.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.7.2/p5.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.7.2/addons/p5.sound.min.js"></script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/messsmain.js"></script>
